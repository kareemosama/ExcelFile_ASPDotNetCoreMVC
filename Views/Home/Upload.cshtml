

@using Upload_Folder_MVC.Models
@model Folder


<div class="row text">
    <div class="col-md-8 offset-2">

        @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry</b> - @TempData["Error"] </span>
            </div>
        }

        <p>
            <h1>Add a New File</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form method="post" asp-action="Upload" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="mb-3">
                        <label asp-for="Content" class="form-label"></label>
                        <input asp-for="Content" class="form-control" type="file" id="file" name="file">
                        <span asp-validation-for="Content" class="text-danger"></span>
                    </div>

                   @* <div class="form-group">
                        <label asp-for="Bio" class="control-label"></label>
                        <input asp-for="Bio" class="form-control" />
                        <span asp-validation-for="Bio" class="text-danger"></span>
                    </div>*@

                    <div class="form-group mt-3">
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                        <button type="submit" class="btn btn-outline-success float-endy">Create</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
